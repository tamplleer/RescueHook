<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="ResultViewModel"
            type="com.whynotpot.rescuehook.screens.result.ResultViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".screens.result.ResultActivity">

        <androidx.cardview.widget.CardView
            android:id="@+id/container"
            android:layout_width="359dp"
            android:layout_height="314dp"
            android:layout_marginBottom="304dp"
            android:backgroundTint="@color/grey_1"
            app:cardCornerRadius="@dimen/spacing_xxp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.MyApp.Button.Rounded">

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="@dimen/spacing_p"
                android:text="@string/you_are_great"
                android:textAlignment="center"
                android:textColor="@color/blue_1"
                android:textSize="12pt" />

            <TextView
                android:id="@+id/text"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginTop="@dimen/spacing_xxxxe"
                android:text="@{ResultViewModel.remainingTime}"
                android:textAlignment="center"
                android:textColor="@color/blue_1"
                android:textSize="10pt" />
        </androidx.cardview.widget.CardView>

        <Button
            android:id="@+id/bBack"
            android:layout_width="191dp"
            android:layout_height="75dp"
            android:shadowColor="@color/red_1"
            android:text="@string/back"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.454"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.609"
            app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.MyApp.Button.Rounded" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>